generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/.prisma/client"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

// Admin User
model AdminUser {
  id           String   @id @default(cuid())
  email        String   @unique
  passwordHash String
  name         String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

// Pricing Tiers
model PricingTier {
  id             String    @id @default(cuid())
  name           String
  description    String    @db.Text
  price          String
  priceNote      String
  features       String    @db.Text // JSON array of features
  highlighted    Boolean   @default(false)
  ctaText        String    @default("Projekt anfragen")
  discountBadge  String?
  discountActive Boolean   @default(false)
  discountEndsAt DateTime?
  order          Int       @default(0)
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
}

// Projects
model Project {
  id          String   @id @default(cuid())
  title       String
  subtitle    String
  description String   @db.Text
  category    String // "websites" | "webapps" | "mobile"
  tags        String   @db.Text // JSON array
  color       String // Tailwind gradient class
  year        String
  link        String?
  imageUrl    String?
  published   Boolean  @default(false)
  order       Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

// Contact Information (single row)
model ContactInfo {
  id           String   @id @default("main")
  phone        String
  email        String
  companyName  String   @default("Origin Labs")
  street       String
  city         String
  country      String   @default("Deutschland")
  responseTime String   @default("24 Stunden")
  linkedIn     String?
  instagram    String?
  github       String?
  twitter      String?
  updatedAt    DateTime @updatedAt
}

// Form Submissions (for analytics)
model FormSubmission {
  id        String   @id @default(cuid())
  name      String
  email     String
  company   String?
  phone     String?
  service   String
  budget    String?
  message   String   @db.Text
  source    String? // UTM source
  medium    String? // UTM medium
  campaign  String? // UTM campaign
  referrer  String?
  userAgent String?  @db.Text
  createdAt DateTime @default(now())
}

// Page Views (simple analytics)
model PageView {
  id        String   @id @default(cuid())
  path      String
  referrer  String?
  source    String?
  userAgent String?  @db.Text
  createdAt DateTime @default(now())

  @@index([path])
  @@index([createdAt])
}
